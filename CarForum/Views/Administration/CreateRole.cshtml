@model CreateRoleViewModel
@{
    ViewData["Title"] = "Create Role";
}

<div class="createRole_page">
    <h1 class="createRole_h1">Create Role</h1>
</div>


<div class="createRole_area">
    <div class="createRole">
        <div class="attribute_error" asp-validation-summary="All"></div>
        <form asp-controller="Administration" asp-action="CreateRole" method="post">
            <div class="createRole_name">
                <label class="register_email_label" asp-for="RoleName">Role Name</label>
                <span class="attribute_error" asp-for="RoleName" asp-validation-for="RoleName"></span>
                <input class="register_email_input" type="text" asp-for="RoleName" />
            </div>
            <div class="createRole_submit">
                <input class="createRole_submit_input" type="submit" name="name" value="Create" />
                <a class="createRole_submit_back" asp-controller="Administration" asp-action="ListRoles">Back</a>
            </div>
        </form>
    </div>
</div>
