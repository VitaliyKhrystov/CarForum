@{
    ViewData["Title"] = "Home Page";
}
@model List<TopicField>

<div class="forum">
    <h1 class="forum-title">@Config.CompanyName</h1>
</div>

<div class="forum_add">
    <a class="forum_add_topic" asp-controller="Topic" asp-action="Add">Add new topic</a>
</div>

<div class="forum_topic">
    <p class="forum_topic_title">Topics list</p>

        @foreach (var topic in Model)
        {
            <div class="forum_topic_list">
                <p class="forum_topic_list_p"><a class="forum_topic_list_p_a" asp-controller="Topic" asp-action="Page" asp-route-id="@topic.Id">@topic.QuestionShort</a></p>
                <a class="forum_topic_list_edit" asp-controller="Home" asp-action="Edit" asp-route-id="@topic.Id">Edit</a>

                <form class="forum_topic_list_form" asp-action="Delete" asp-route-id="@topic.Id" method="post">
                    <button class="forum_topic_list_form_submit" type="submit">Delete</button>
                </form>
             </div>

         }

    </div>

